<h1>Wings!</h1>

<div class="container" id="wing-add">
    <h2>Add a Wing</h2>
    <form class="create-form">

    <div class="form-group">
        <label for="ca">Wing Sauce:</label>
        <input type="text" id="wing-sauce" name="name">
    </div>

    <button type="submit" id="add-wing">Add Wing</button>
    </form>
</div>

<div class="row">

    <div class="col-md-6">

        <h2>Uneaten Wings</h2>

        <ul class="list-group">

            <li class="list-group-item">

                {{#each wings}}
                    {{#unless eaten}}
                        {{> wing-item eaten=false}}
                    {{/unless}}
                {{/each}}

            </li>

        </ul>

    </div>


    <div class="col-md-6">

        <h2>Eaten Wings</h2>

        <ul class="list-group">

            <li class="list-group-item">

                {{#each wings}}
                    {{#if eaten}}
                        {{>wing-item eaten=true}}
                    {{/if}}
                {{/each}}

            </li>

        </ul>

    </div>

</div>

